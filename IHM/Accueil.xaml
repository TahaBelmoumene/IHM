<Window x:Class="IHM.Accueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Garage Manager - Accueil" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F0F0F0">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Bienvenue dans Garage Manager" 
                       FontSize="32" FontWeight="Bold" Foreground="#333"
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>

            <Button Content="🔍  TROUVER UNE PIÈCE" 
                    Height="60" Width="400" Margin="10" FontSize="18"
                    Background="#007ACC" Foreground="White" FontWeight="SemiBold"
                    Click="BtnTrouver_Click"/>

            <Button Content="➕  AJOUTER UNE PIÈCE" 
                    Height="60" Width="400" Margin="10" FontSize="18"
                    Background="White" BorderBrush="#007ACC" BorderThickness="2"
                    Click="BtnAjouterPiece_Click"/>

            <Button Content="✏️  MODIFIER UNE PIÈCE" 
                    Height="60" Width="400" Margin="10" FontSize="18"
                    Background="White" BorderBrush="#007ACC" BorderThickness="2"
                    Click="BtnModifierPiece_Click"/>

            <Button Content="🚗  AJOUTER UNE VOITURE" 
                    Height="60" Width="400" Margin="10" FontSize="18"
                    Background="White" BorderBrush="#007ACC" BorderThickness="2"
                    Click="BtnAjouterVoiture_Click"/>
        </StackPanel>
    </Grid>
</Window>