<Window x:Class="IHM.Accueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Garage Manager - Dashboard" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F4F7F9">

    <Window.Resources>
        <Style x:Key="MenuCardStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Direction="270" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Garage Manager" FontSize="32" FontWeight="ExtraBold" Foreground="#1A202C"/>
            <TextBlock Text="Tableau de bord de gestion de stock" FontSize="14" Foreground="#718096"/>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="3">

            <Button Style="{StaticResource MenuCardStyle}" Background="#007ACC" Click="BtnTrouver_Click">
                <StackPanel>
                    <TextBlock Text="🔍" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Trouver une pièce" FontWeight="Bold" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Recherche par véhicule" FontSize="12" Foreground="#E0EFFF" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MenuCardStyle}" Click="BtnAjouterPiece_Click">
                <StackPanel>
                    <TextBlock Text="📦" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Entrée Stock" FontWeight="Bold" FontSize="18" Foreground="#2D3748" HorizontalAlignment="Center"/>
                    <TextBlock Text="Ajouter une nouvelle pièce" FontSize="12" Foreground="#A0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MenuCardStyle}" Click="BtnAjouterVoiture_Click">
                <StackPanel>
                    <TextBlock Text="🚗" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Véhicules" FontWeight="Bold" FontSize="18" Foreground="#2D3748" HorizontalAlignment="Center"/>
                    <TextBlock Text="Gérer le catalogue auto" FontSize="12" Foreground="#A0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MenuCardStyle}" Click="BtnGererRayons_Click">
                <StackPanel>
                    <TextBlock Text="🗂️" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Rayons" FontWeight="Bold" FontSize="18" Foreground="#2D3748" HorizontalAlignment="Center"/>
                    <TextBlock Text="Modifier l'arborescence" FontSize="12" Foreground="#A0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource MenuCardStyle}" Click="BtnModifierPiece_Click">
                <StackPanel>
                    <TextBlock Text="✏️" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Inventaire" FontWeight="Bold" FontSize="18" Foreground="#2D3748" HorizontalAlignment="Center"/>
                    <TextBlock Text="Mettre à jour les stocks" FontSize="12" Foreground="#A0AEC0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

        </UniformGrid>
    </Grid>
</Window>