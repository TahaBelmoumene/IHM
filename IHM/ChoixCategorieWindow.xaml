<Window x:Class="IHM.ChoixCategorieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choisir une catégorie" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="TxtTitreVoiture" Text="Pièces pour : [Voiture Choisie]" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"/>

            <TextBlock Text="Quelle catégorie recherchez-vous ?" Margin="0,0,0,10"/>

            <ListBox x:Name="LstCategories" Height="300" MouseDoubleClick="LstCategories_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Width="500">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="{Binding Nom}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>