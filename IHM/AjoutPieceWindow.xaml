<Window x:Class="IHM.AjoutPieceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvelle Pièce" Height="700" Width="600"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Border Background="White" Margin="15" Padding="20" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.2" BlurRadius="10"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock Text="1. Pour quel véhicule ?" FontSize="18" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Origine (ex: Française)"/>
                    <ComboBox x:Name="CboOrigine" SelectionChanged="CboOrigine_SelectionChanged" DisplayMemberPath="Nom" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Marque"/>
                    <ComboBox x:Name="CboMarque" SelectionChanged="CboMarque_SelectionChanged" DisplayMemberPath="Nom" Height="30" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Modèle"/>
                    <ComboBox x:Name="CboModele" SelectionChanged="CboModele_SelectionChanged" DisplayMemberPath="Nom" Height="30" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="2">
                    <TextBlock Text="Version / Année"/>
                    <ComboBox x:Name="CboGeneration" SelectionChanged="CboGeneration_SelectionChanged" DisplayMemberPath="Nom" Height="30" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="Moteur"/>
                    <ComboBox x:Name="CboMoteur" SelectionChanged="CboMoteur_SelectionChanged" DisplayMemberPath="Nom" Height="30" IsEnabled="False"/>
                </StackPanel>
            </Grid>

            <Separator Margin="0,0,0,20"/>

            <TextBlock Text="2. Où ranger la pièce ?" FontSize="18" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Rayon"/>
                    <ComboBox x:Name="CboNiv1" SelectionChanged="CboNiv1_SelectionChanged" DisplayMemberPath="Nom" Height="30"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Famille"/>
                    <ComboBox x:Name="CboNiv2" SelectionChanged="CboNiv2_SelectionChanged" DisplayMemberPath="Nom" Height="30" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Grid.Column="4">
                    <TextBlock Text="Type"/>
                    <ComboBox x:Name="CboNiv3" SelectionChanged="CboNiv3_SelectionChanged" DisplayMemberPath="Nom" Height="30" IsEnabled="False"/>
                </StackPanel>
            </Grid>

            <Separator Margin="0,0,0,20"/>

            <TextBlock Text="Détails de la pièce" FontSize="18" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>

            <TextBlock Text="Nom de la pièce :" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtNom" Height="35" Margin="0,5,0,15" FontSize="14" VerticalContentAlignment="Center" BorderBrush="#CCC"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Prix (€) :" FontWeight="SemiBold"/>
                    <TextBox x:Name="TxtPrix" Height="35" Margin="0,5,0,0" FontSize="14" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Stock :" FontWeight="SemiBold"/>
                    <TextBox x:Name="TxtStock" Height="35" Margin="0,5,0,0" FontSize="14" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="État :" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CboEtat" Height="35" Margin="0,5,0,0" SelectedIndex="0" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Neuf"/>
                        <ComboBoxItem Content="Occasion"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
            

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnPack" Content="GÉNÉRER PACK DÉMARRAGE" Height="50" Grid.Column="0"
                        Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="14"
                        Click="BtnPack_Click" IsEnabled="False" Opacity="0.5"
                        ToolTip="Ajoute automatiquement Filtres, Freins et Batterie"/>

                <Button x:Name="BtnValider" Content="ENREGISTRER UNE PIÈCE" Height="50" Grid.Column="2"
                        Background="#28a745" Foreground="White" FontWeight="Bold" FontSize="14"
                        Click="BtnEnregistrer_Click" IsEnabled="False" Opacity="0.5"/>
            </Grid>

            <TextBlock Text="* Sélectionnez un véhicule pour activer le Pack" FontSize="11" Foreground="#999" HorizontalAlignment="Center" Margin="0,5,0,0"/>

        </StackPanel>
    </Border>
</Window>